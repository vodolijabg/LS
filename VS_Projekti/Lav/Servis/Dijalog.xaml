<Window x:Class="Servis.Dijalog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Dialog" SizeToContent="WidthAndHeight" MinWidth="200"  ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="10" HorizontalAlignment="Center" Name="textBlockPoruka" Text="Poruka"></TextBlock>
        <Button IsDefault="True"  Grid.Row="1" Margin="0,0,0,10" Height="23" Width="50" HorizontalAlignment="Center" Click="Button_Click">OK</Button>
    </Grid>
</Window>
