            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBox Margin="0,0,3,0" Grid.Column="0" Grid.Row="0" Name="textBoxTip" IsReadOnly="True" >
