    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    xmlns:local="clr-namespace:Servis"
    Title="PonudaWizard2" KeepAlive="True" Loaded="PageFunction_Loaded">
<Grid Name="gridRadniNalog" Background="#FF9CAAC1">
